<body>





    <div id="articles">
      <div class="columns is-multiline ">
        {{#each Article}}
        <div class="column  is-full-desktop is-full-tablet is-full-mobile">
          <div class='card'>
            <div class='card-image'>
              <figure class='image is-3x1'>
                <img class='imgsize' src='{{image}}' alt='Placeholder image'>
                <img class='imgbackground' src='{{image}}'>
              </figure>
            </div>
            <div class='card-content'>
              <p class='title card-title' href='{{link}}'>

                {{title}} </p>
              <hr>
              <p class='subtitle'></p>{{summary}}</p>
              <div class='saveButton has-text-centered	' id='{{@index}}' value='{{_id}}'>SAVE ARTICLE</div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
      <div id="newArticleCards"></div>

    </div>
 

